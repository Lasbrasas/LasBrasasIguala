                        <thead style="background:#f5f5f5;"><tr><th style="padding:8px; text-align:left;">Cat</th><th style="padding:8px; text-align:right;">Total</th></tr></thead>
                        <tbody id="tablaDesglose"></tbody>
                    </table>
                </div>
